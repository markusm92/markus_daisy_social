<% content_for :title, "Showing post" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

<h1 class="font-bold text-4xl mb-5 text-primary">Showing post</h1>

  <%= render @post %>

  <div class="mt-6 space-x-2">
    <%= link_to "Edit this post",
        edit_post_path(@post),
        class: "inline-block rounded-md px-4 py-2.5 bg-blue-600 text-white hover:bg-blue-700 font-medium" %>

    <%= link_to "Back to posts",
        posts_path,
        class: "inline-block rounded-md px-4 py-2.5 bg-gray-600 text-white hover:bg-gray-700 font-medium" %>

    <%= button_to "Destroy this post",
        @post,
        method: :delete,
        form_class: "inline-block",
        class: "inline-block rounded-md px-4 py-2.5 bg-red-600 hover:bg-red-700 text-white font-medium cursor-pointer",
        data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
